      <p class="trip_title" id="a_wxts">
        <i>温馨提示</i>
      </p>

      <div class="price_explain">
        <br>
        <%= @hotline.wenxintishi.html_safe %>
      </div>


      <p class="trip_title" id="a_ydts">
        <i>预订提示</i>
      </p>

      <div class="price_explain">
        <%= @hotline.yudingtishi.html_safe %>
      </div>
    </div>
  </div>
  <div class="con_right fn-right">
    <div class="top_sell">
      <h3>热销线路</h3>
      <% @hotdoors.each do |q| %>
          <ul class="sell_list">
            <li>・ <a href="<%= gentuan_destination_one_path(q) %>" title="<%= q.title %>"><%= q.title %></a></li>
          </ul>
      <% end %>
    </div>

    <div class="new_gonglue">
      <h3>最新旅游攻略</h3>

      <div class="gonglue_img">
        <a href="#"><img src="../images/gongl1.gif" data-original="/pics/gongl1.gif" style="display: inline;"></a>
        <a href="#"><img src="../images/gongl2.gif" data-original="/pics/gongl2.gif" style="display: inline;"></a>
      </div>
      <% @gonglues.each do |q| %>
          <ul class="gonglue_list">
            <li>・ <a href="<%= show_raider_main_path(q) %>"><%= q.title %></a></li>
          </ul>
      <% end %>
