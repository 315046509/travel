<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_citys_path %>"> 世界游管理</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_city_tejia_path %>">旅游推荐管理</a> <span class="divider">/</span>
    </li>
    <li>
      新建旅游推荐
    </li>
  </ul>
</div>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title="">
      <h2><i class="icon-edit"></i> 新建旅游推荐</h2>
    </div>
    <div class="box-content">
      <%= form_for(:recommend, :url => admin_city_recommends_path, :method => :post, :html => {:id => "verifytitle"}) do |f| %>
          <legend>新建旅游推荐</legend>
          <%= hidden_field_tag :city_id, @parent_id%>
          <%= f.label "旅游推荐：" %>
          <%= f.text_field :title %><br/>
          <%= f.label "价格：" %>
          <%= f.text_field :price %><br/>
          <%= f.label "旅游推荐图：" %>
          <%= f.file_field :avatar %><br/><br/>
          <%= f.label "旅游推荐内容：" %>
          <%= f.cktext_area :description, :cols => 40, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'} %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">完成提交</button>
          </div>
      <% end %>
    </div>
  </div>
  <!--/span-->
</div>
<script src="/admin/js/jquery.validate.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("#verifytitle").validate({
                rules: {
                    "recommend[title]": {
                        required: true
                    },
                    "recommend[price]": {
                        required: true
                    },
                    "recommend[avatar]": {
                        required: true,
                        accept: "jpg|png"
                    },
                    "recommend[description]": {
                        required: true
                    }
                },
                messages: {
                    "recommend[title]": {
                        required: "“请填写标题”"
                    },
                    "recommend[price]": {
                        required: "“请填写价格”"
                    },
                    "recommend[avatar]": {
                        required: "“请上传图片”",
                        accept: "图片类型必须是png或jpg"
                    },
                    "recommend[description]": {
                        required: "“请填写内容”"
                    }
                },
                errorClass: "error",
                highlight: function (element, errorClass) {
                    $(element).parent().parent().addClass(errorClass);
                },
                unhighlight: function (element, errorClass) {
                    $(element).parent().parent().removeClass(errorClass);
                },
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                },
                errorElement: "span"
            });
        });
    });
    $(document).ready(function () {
        $('form[data-remote]').bind('ajax:before', function () {
            for (instance in CKEDITOR.instances) {
                CKEDITOR.instances[instance].updateElement();
            }
        });
    });
</script>