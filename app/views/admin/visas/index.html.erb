<script>
    <% if flash[:note]%>
    alert('<%=flash[:note]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      签证列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 签证列表</h2>
    </div>
    <div class="box-content">
      <div class="form-actions">
        <div style="float: left">
          <%= link_to '添加签证资料', new_admin_visa_path, :class => "btn btn-primary" %>
        </div>
      </div>
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>地区分类</th>
          <th>签证地区</th>
          <th>签证编号</th>
          <th>签证类型</th>
          <th>办理时间</th>
          <th>面试</th>
          <th>有效期</th>
          <th>入境次数</th>
          <th>最长时间</th>
          <th>收客范围</th>
          <th>创建时间</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <% @visas.each do |q| %>
            <tr>
              <td><%= q.id %></td>
              <td><%= q.question_category_name %></td>
              <td><%= q.title %></td>
              <td><%= q.bianhao %></td>
              <td><%= q.leixing %></td>
              <td><%= q.banlishijian %></td>
              <td><%= q.mianshi %></td>
              <td><%= q.youxiaoqi %></td>
              <td><%= q.rujingcishu %></td>
              <td><%= q.zuichangshijian %></td>
              <td><%= q.shoukefanwei %></td>
              <td class="center"><%= my_datetime_format q.created_at %></td>
              <td><%= link_to '删除', admin_visa_path(q), :method => :delete, :confirm => "您确定要删除吗?" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul>
          <%= paginate @visas %>
        </ul>
      </div>
    </div>
  </div>
  <!--/span-->
</div><!--/row-->