<script>
    <% if flash[:error_msg]%>
    alert('<%=flash[:error_msg]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_hotels_path %>">城市管理</a> <span class="divider">/</span>
    </li>
    <li>
      添加城市
    </li>
  </ul>
</div>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title="">
      <h2><i class="icon-edit"></i> 添加城市</h2>
    </div>
    <div class="box-content">
      <%= form_for(:hotel, :url => admin_hotels_path, :method => :post, :html => {:id => "verifytitle"}) do |f| %>
          <legend>添加公告</legend>
          <%= f.label "世界游分类：" %>
          <%= f.select :question_category_id, options_for_select(Hotel::QUESTION_CATEGORYS) %>
          <%= f.label "城市名称：" %>
          <%= f.text_field :title %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">发布信息</button>
          </div>
      <% end %>
    </div>
  </div>
  <!--/span-->
</div>
<script src="/admin/js/jquery.validate.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("#verifytitle").validate({
                rules: {
                    "hotel[title]": {
                        required: true
                    }
                },
                messages: {
                    "hotel[title]": {
                        required: "“请填写标题”"
                    }
                },
                errorClass: "error",
                highlight: function (element, errorClass) {
                    $(element).parent().parent().addClass(errorClass);
                },
                unhighlight: function (element, errorClass) {
                    $(element).parent().parent().removeClass(errorClass);
                },
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                },
                errorElement: "span"
            });
        });
    });
    $(document).ready(function () {
        $('form[data-remote]').bind('ajax:before', function () {
            for (instance in CKEDITOR.instances) {
                CKEDITOR.instances[instance].updateElement();
            }
        });
    });
</script>