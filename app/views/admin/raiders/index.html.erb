<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_citys_path %>"> 世界游管理</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_city_raiders_path %>">攻略管理</a> <span class="divider">/</span>
    </li>
    <li>
      攻略列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 攻略列表</h2>
    </div>
    <div class="box-content">
      <div class="form-actions">
        <div style="float: left">
          <%= link_to '添加攻略', new_admin_city_raider_path, :class => "btn btn-primary" %>
        </div>
      </div>
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>攻略</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <% @jobs.each do |q| %>
            <tr>
              <td><%= q.id %></td>
              <td><%= q.title %></td>
              <td><%= link_to '删除', admin_city_path(q), :method => :delete, :confirm => "您确定要删除吗?" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul>
          <%= paginate @jobs %>
        </ul>
      </div>
    </div>
  </div>
  <!--/span-->
</div><!--/row-->