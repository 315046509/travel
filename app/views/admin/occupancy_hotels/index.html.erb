<script>
    <% if flash[:note]%>
    alert('<%=flash[:note]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_hotels_path %>"> 城市管理</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_hotel_occupancy_hotels_path %>">酒店管理</a> <span class="divider">/</span>
    </li>
    <li>
      酒店列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 酒店列表</h2>
    </div>
    <div class="box-content">
      <div class="form-actions">
        <div style="float: left">
          <%= link_to '添加酒店', new_admin_hotel_occupancy_hotel_path, :class => "btn btn-primary" %>
        </div>
      </div>
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>酒店</th>
          <th>酒店地址</th>
          <th>酒店价格</th>
          <th>酒店房型</th>
          <th>酒店床型</th>
          <th>酒店早餐</th>
          <th>酒店日均价</th>
          <th>创建时间</th>
          <th>浏览</th>
          <th>修改</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <% @hotels.each do |q| %>
            <tr>
              <td><%= q.id %></td>
              <td><%= q.name %></td>
              <td><%= q.address %></td>
              <td><%= q.price %></td>
              <td><%= q.fangxing %></td>
              <td><%= q.bed_type %></td>
              <td><%= q.breakfast %></td>
              <td><%= q.average %></td>
              <td class="center"><%= my_datetime_format q.created_at %></td>
              <td class="center"><%= link_to "浏览", admin_hotel_occupancy_hotel_path(params[:hotel_id],q) %></td>
              <td><%= link_to '修改', edit_admin_hotel_occupancy_hotel_path(params[:hotel_id],q) %></td>
              <td><%= link_to '删除', admin_hotel_occupancy_hotel_path(params[:hotel_id],q), :method => :delete, :confirm => "您确定要删除吗?" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul>
          <%= paginate @hotels %>
        </ul>
      </div>
    </div>
  </div>
  <!--/span-->
</div><!--/row-->