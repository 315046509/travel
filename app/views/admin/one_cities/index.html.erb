<script>
    <% if flash[:note]%>
    alert('<%=flash[:note]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      世界游列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 世界游列表</h2>
    </div>
    <div class="box-content">
      <div class="form-actions">
        <div style="float: left">
          <%= link_to '添加城市', new_admin_one_city_path, :class => "btn btn-primary" %>
        </div>
      </div>
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>分类</th>
          <th>城市</th>
          <th>海外板块旅游</th>
          <th>出境热门旅游</th>
          <th>国内热门旅游</th>
          <th>旅游风向标</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <% @jobs.each do |q| %>
            <tr>
              <td><%= q.id %></td>
              <td><%= q.question_category_name %></td>
              <td><%= q.title %></td>
              <td><%= link_to '海外板块旅游', admin_one_city_jingdians_path(q), :class => "btn btn-primary" %></td>
              <td><%= link_to '出境热门旅游', admin_one_city_exithots_path(q), :class => "btn btn-primary" %></td>
              <td><%= link_to '国内热门旅游', admin_one_city_domestics_path(q), :class => "btn btn-primary" %></td>
              <td><%= link_to '旅游风向标', admin_city_tejia_path(q), :class => "btn btn-primary" %></td>
              <td><%= link_to '删除', admin_one_city_path(q), :class => "btn btn-primary", :method => :delete, :confirm => "您确定要删除吗?" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul>
          <%= paginate @jobs %>
        </ul>
      </div>
    </div>
  </div>
  <!--/span-->
</div><!--/row-->