<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_accounts_path %>">会员管理</a> <span class="divider">/</span>
    </li>
    <li>
      会员信息
    </li>
  </ul>
</div>

<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 会员列表</h2>
    </div>
    <div class="box-content">
      <%= form_tag update_multiple_admin_accounts_path do %>
          <table class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
            <tr>
              <th>ID</th>
              <th>昵称</th>
              <th>手机号</th>
              <th>邮箱</th>
              <th>密码</th>
              <th>注册时间</th>
              <th>删除</th>
            </tr>
            </thead>
            <tbody>
            <% @accounts.each do |account| %>
                <tr>
                  <td><%= account.id %></td>
                  <td><%= account.name %></td>
                  <td><%= account.mobile %></td>
                  <td><%= account.email %></td>
                  <td><%= account.passwd %></td>
                  <td class="center"><%= my_datetime_format account.created_at %></td>
                  <td><%= link_to '删除', admin_account_path(account), :method => :delete, :confirm => "删除后无法恢复，您确定要删除吗?" %></td>
                </tr>
            <% end %>
            </tbody>
          </table>

          <div class="pagination pagination-centered">
            <ul>
              <%= paginate @accounts %>
            </ul>
          </div>

      <% end %>
    </div>
  </div>
  <!--/span-->

</div><!--/row-->