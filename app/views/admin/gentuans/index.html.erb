<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_citys_path %>"> 世界游管理</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_city_tejia_path %>">跟团旅游管理</a> <span class="divider">/</span>
    </li>
    <li>
      跟团旅游列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 跟团旅游列表</h2>
    </div>
    <div class="box-content">
      <div class="form-actions">
        <div style="float: left">
          <%= link_to '添加跟团旅游', new_admin_city_gentuan_path, :class => "btn btn-primary" %>
        </div>
      </div>
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>跟团旅游</th>
          <th>跟团旅游图</th>
          <th>价格</th>
          <th>创建时间</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <% @lunbos.each do |q| %>
            <tr>
              <td><%= q.id %></td>
              <td><%= q.title %></td>
              <td><%= image_tag q.avatar.url(:thumb) %></td>
              <td><%= q.price %></td>
              <td class="center"><%= my_datetime_format q.created_at %></td>
              <td><%= link_to '删除', admin_city_gentuan_path(params[:city_id],q), :method => :delete, :confirm => "您确定要删除吗?" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul>
          <%= paginate @lunbos %>
        </ul>
      </div>
    </div>
  </div>
  <!--/span-->
</div><!--/row-->