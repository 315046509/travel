<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_destination_twos_path %>">导航栏二</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= tejia_admin_destination_twos_path %>">特价旅游管理</a> <span class="divider">/</span>
    </li>
    <li>
      新建特价旅游
    </li>
  </ul>
</div>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title="">
      <h2><i class="icon-edit"></i> 新建特价旅游</h2>
    </div>
    <div class="box-content">
      <%= form_for(:tejiatwo, :url => create_tejia_admin_destination_twos_path, :method => :post, :html => {:id => "verifytitle"}) do |f| %>
          <legend>新建特价旅游 </legend>
          <%= f.label "特价旅游名称：" %>
          <%= f.text_field :title %>
          <%= f.label "特价旅游图：" %>
          <%= f.file_field :avatar %>
          <%= f.label "特价旅游内容：" %>
          <%= f.file_field :description %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">完成提交</button>
          </div>
      <% end %>
    </div>
  </div>
  <!--/span-->
</div>
<script src="/admin/js/jquery.validate.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("#verifytitle").validate({
                rules: {
                    "tejia[title]": {
                        required: true
                    },
                    "tejia[avatar]": {
                        required: true,
                        accept: "jpg|png"
                    },
                    "tejia[description]": {
                        required: true
                    }
                },
                messages: {
                    "tejia[title]": {
                        required: "请填写标题"
                    },
                    "tejia[avatar]": {
                        required: "请上传图片",
                        accept: "图片类型必须是png或jpg"
                    },
                    "tejia[description]": {
                        required: "请填写内容"
                    }
                },
                errorClass: "error",
                highlight: function (element, errorClass) {
                    $(element).parent().parent().addClass(errorClass);
                },
                unhighlight: function (element, errorClass) {
                    $(element).parent().parent().removeClass(errorClass);
                },
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                },
                errorElement: "span"
            });
        });
    });
    $(document).ready(function () {
        $('form[data-remote]').bind('ajax:before', function () {
            for (instance in CKEDITOR.instances) {
                CKEDITOR.instances[instance].updateElement();
            }
        });
    });
</script>