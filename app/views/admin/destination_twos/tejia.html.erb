<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_destination_twos_path %>">导航栏二</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= tejia_admin_destination_twos_path %>">特价旅游管理</a> <span class="divider">/</span>
    </li>
    <li>
      特价旅游列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 特价旅游列表</h2>
    </div>
    <div class="box-content">
      <div class="form-actions">
        <div style="float: left">
          <%= link_to '添加特价旅游', new_tejia_admin_destination_twos_path, :class => "btn btn-primary" %>
        </div>
      </div>
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>导航二之《特价旅游名称》</th>
          <th>导航二之《特价旅游图》</th>
          <th>创建时间</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <% @lunbos.each do |q| %>
            <tr>
              <td><%= q.id %></td>
              <td><%= truncate_u(q.title, 70) %></td>
              <td><%= image_tag q.avatar.url(:thumb) %></td>
              <td class="center"><%= my_datetime_format q.created_at %></td>
              <td><%= link_to '删除', delett_tejia_admin_destination_two_path(q), :method => :delete, :confirm => "您确定要删除吗?" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul>
          <%= paginate @lunbos %>
        </ul>
      </div>
    </div>
  </div>
  <!--/span-->
</div><!--/row-->