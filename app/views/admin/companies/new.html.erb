<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_one_cities_path %>"> 世界游管理</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= hotline_admin_companies_path %>">公司旅游路线管理</a> <span class="divider">/</span>
    </li>
    <li>
      新建公司旅游路线
    </li>
  </ul>
</div>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title="">
      <h2><i class="icon-edit"></i> 新建公司旅游路线</h2>
    </div>
    <div class="box-content">
      <%= form_for(:hotline, :url => admin_companies_path, :method => :post, :html => {:id => "verifytitle"}) do |f| %>
          <legend>新建公司旅游路线</legend>
          <h1><%= f.label "旅游标题：" %></h1>
          <%= f.text_field :title %>
          <br/>

          <h1><%= f.label "包团价格：" %></h1>
          <%= f.text_field :price %>
          <br/>

          <h1><%= f.label "旅游图片：" %></h1>
          <%= f.file_field :avatar %>
          <br/><br/>

          <h1><%= f.label "旅游内容：" %></h1>
          <%= f.text_area :description, :style => "width:99%;height:100px" %>
          <br/>

          <h1><%= f.label "参考行程：" %></h1>
          <%= f.cktext_area :xingcheng, :cols => 10, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'} %>
          <br/>

          <h1><%= f.label "费用说明：" %></h1>
          <%= f.cktext_area :feiyongshuoming, :cols => 10, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'} %>
          <br/>

          <h1><%= f.label "温馨提示：" %></h1>
          <%= f.cktext_area :wenxintishi, :cols => 10, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'} %>
          <br/>

          <h1><%= f.label "预订提示：" %></h1>
          <%= f.cktext_area :yudingtishi, :cols => 10, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'} %>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">完成提交</button>
          </div>
      <% end %>
    </div>
  </div>
  <!--/span-->
</div>
<script src="/admin/js/jquery.validate.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("#verifytitle").validate({
                rules: {
                    "hotline[title]": {
                        required: true
                    },
                    "hotline[price]": {
                        required: true
                    },
                    "hotline[avatar]": {
                        required: true,
                        accept: "jpg|png"
                    },
                    "hotline[description]": {
                        required: true
                    }
                },
                messages: {
                    "hotline[title]": {
                        required: "“请填写标题”"
                    },
                    "hotline[price]": {
                        required: "“请填写价格”"
                    },
                    "hotline[avatar]": {
                        required: "“请上传图片”",
                        accept: "图片类型必须是png或jpg"
                    },
                    "hotline[description]": {
                        required: "“请填写内容”"
                    }
                },
                errorClass: "error",
                highlight: function (element, errorClass) {
                    $(element).parent().parent().addClass(errorClass);
                },
                unhighlight: function (element, errorClass) {
                    $(element).parent().parent().removeClass(errorClass);
                },
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                },
                errorElement: "span"
            });
        });
    });
    $(document).ready(function () {
        $('form[data-remote]').bind('ajax:before', function () {
            for (instance in CKEDITOR.instances) {
                CKEDITOR.instances[instance].updateElement();
            }
        });
    });
</script>